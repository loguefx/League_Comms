{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "paths": {
      "@league-voice/shared": ["./packages/shared/src"],
      "@league-voice/ui": ["./packages/ui/src"],
      "@league-voice/riot": ["./packages/riot/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next"]
}
